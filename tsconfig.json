{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports":true,
  },
  "include": ["src/**/*","jest.setup.ts"],  
  "exclude": ["node_modules", "dist"]
}